<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PuzzlePlaza</title>
    <link rel="stylesheet" href="~/css/footer.css">
    <link href="~/css/header.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <div id="header_div">
            <div class="welcoming">
                <img src="~/Media/images/logo.png" alt="PuzzlePlazaLogo" class="logo" />
                <p id="header">Welcome, @ViewBag.UserName!</p>
            </div>
            <div id="user_info">
                <div class="time">
                    <div>Date: @DateTime.Now.ToShortDateString()</div>
                    <div>Time: @DateTime.Now.ToShortTimeString()</div>
                </div>
                <a class="user_div" id="hover" href="#">
                    <img src="~/Media/images/user.png" class="icons" id="userIcon" alt="user" />
                    <span class="userSpan">Account</span>
                </a>
            </div>
        </div>
        <div class="divider"></div>
        <div id="sub_header_div">
            <div id="widget">
                <a class="widgets" href="@Url.Action("BedTracking", "Home")">Real-Time Bed Tracking</a>
                <a class="widgets" href="@Url.Action("Registration", "Home")">Registration</a>
                <a class="widgets" href="@Url.Action("Discharging", "Home")">Discharging</a>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer id="footer">
        <div id="main_footer">
            <div class="footer_details_body">
                <p class="footer_head">PuzzlePlaza</p>
                <a class="footer_body" href="@Url.Action("Index", "Home")">Main Page</a>
                <a class="footer_body" href="@Url.Action("Cart", "Cart")">Cart</a>
                <a class="footer_body" href="@Url.Action("Products", "Product")">Products</a>
            </div>
            <div class="footer_details_body">
                <p class="footer_head">Contact Us</p>
                <p class="footer_body">Email: support@puzzleplaza.com</p>
                <p class="footer_body">Customer Service: +123456789</p>
            </div>
            <div class="footer_details_body">
                <p class="footer_head">Follow Us</p>
                <img src="~/Media/images/SocialMedia.png" alt="Social Media Links">
            </div>
        </div>
        <div id="company">&copy; @DateTime.Now.Year PuzzlePlaza</div>
    </footer>
</body>
</html>
